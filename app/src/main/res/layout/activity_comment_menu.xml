<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.chanakafernando.activities.CommentMenuActivity"
    android:background="@android:color/darker_gray">


    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@mipmap/cro"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <ImageButton
        android:id="@+id/ibTrafic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@mipmap/tr"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <ImageButton
        android:id="@+id/ibCrowd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        app:layout_constraintHorizontal_bias="0.518"
        app:layout_constraintLeft_toRightOf="@+id/ibTrafic"
        app:layout_constraintRight_toLeftOf="@+id/ibAccident"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/cro"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/ibAccident"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@mipmap/acc"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="8dp" />

    <ImageButton
        android:id="@+id/ibSeats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:background="@null"
        app:layout_constraintLeft_toLeftOf="parent"

        app:srcCompat="@mipmap/se"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="SEATS "
        app:layout_constraintLeft_toLeftOf="@+id/ibSeats"
        app:layout_constraintRight_toRightOf="@+id/ibSeats"
        app:layout_constraintTop_toBottomOf="@+id/ibSeats" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CROWD"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/ibCrowd"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ibCrowd"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ibCrowd" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="7dp"
        android:text="ACCIDENT"
        app:layout_constraintLeft_toLeftOf="@+id/ibAccident"
        app:layout_constraintRight_toRightOf="@+id/ibAccident"
        app:layout_constraintTop_toBottomOf="@+id/ibAccident"
        tools:layout_editor_absoluteY="112dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TRAFIC"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="@+id/ibTrafic"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/ibTrafic"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/ibTrafic" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        app:srcCompat="@mipmap/cro"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        app:layout_constraintLeft_toRightOf="@+id/ibTrafic"
        android:layout_marginLeft="8dp"
        app:layout_constraintRight_toLeftOf="@+id/imageButton15"
        android:layout_marginRight="8dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="RANK BUS"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton14"
        app:layout_constraintRight_toRightOf="@+id/imageButton14"
        app:layout_constraintTop_toBottomOf="@+id/imageButton14" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:text="NEWS"
        app:layout_constraintLeft_toLeftOf="@+id/imageButton15"
        app:layout_constraintRight_toRightOf="@+id/imageButton15"
        app:layout_constraintTop_toBottomOf="@+id/imageButton15" />

    <Button
        android:id="@+id/bComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_orange_dark"
        android:text="POST A COMMENT"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>